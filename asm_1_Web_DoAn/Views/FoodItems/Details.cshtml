@model asm_1_Web_DoAn.Models.FoodItem

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="text-center">@Model.FoodName</h1>
    <div class="card">
        <div class="row g-0">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.FoodName" class="img-fluid rounded-start" />
                }
                else
                {
                    <div class="img-placeholder">No image available</div>
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.FoodName</h5>
                    <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
                    <p class="card-text"><strong>Quantity:</strong> @Model.FoodQuantity</p>
                    <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                    <p class="card-text"><strong>Status:</strong> @Model.Status</p>
                    <p class="card-text"><strong>Category:</strong> @Model.Category</p>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@Model.FoodItemId" class="btn btn-primary">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .img-placeholder {
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f8f9fa;
        color: #6c757d;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }
</style>
