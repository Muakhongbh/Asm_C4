@model IEnumerable<asm_1_Web_DoAn.Models.Combo>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Danh sách Combo</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/images/favicon.ico">
    <link rel="shortcut icon" href="/images/favicon.ico" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.8/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        .combo-card img {
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <!--==============================header=================================--

    <!--==============================Content=================================-->
    <div class="container">
        <h1 class="text-center mb-4">Danh sách Combo</h1>

        <!-- Danh sách Combo -->
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card combo-card shadow-sm">
                        <img src="@Url.Content(item.ImageUrlcombo)" alt="@item.ComboName" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">@item.ComboName</h5>
                            <p class="card-text text-muted">@item.ComboDescription</p>
                            <p class="card-text text-success font-weight-bold">Giá: @item.ComboPrice.ToString("C")</p>
                            <a asp-action="ComboDetails" asp-route-id="@item.ComboId" class="btn btn-primary">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Nút quay lại -->
        <div class="text-center mt-4">
            <a asp-action="FoodItems" class="btn btn-outline-success">Quay về Food Item</a>
        </div>
    </div>

    <!--==============================footer=================================-->
    <footer class="mt-5">
        <div class="text-center py-3">
            <a href="/" class="f_logo"><img src="/images/f_logo.png" alt=""></a>
            <p>&copy; 2023 | <a href="#">Privacy Policy</a></p>
            <p>Website designed by <a href="http://www.templatemonster.com/" rel="nofollow">TemplateMonster.com</a></p>
        </div>
    </footer>
</body>
</html>
